{
  "$schema": "/etc/xdg/swaync/configSchema.json",
  "positionX": "right",
  "positionY": "top",
  "control-center-width": 400,
  "fit-to-screen": true,
  "layer": "overlay",
  "control-center-layer": "overlay",
  "cssPriority": "user",
  "notification-2fa-action": true,
  "notification-inline-replies": false,
  "notification-icon-size": 48,
  "notification-body-image-height": 100,
  "notification-body-image-width": 200,
  "widgets": [
    "title",
    "dnd",
    "mpris",
    "volume",
    "backlight",
    "buttons-grid"
  ],
  "widget-config": {
    "title": {
      "text": "Centro de Control",
      "clear-all-button": true,
      "button-text": "Borrar todo"
    },
    "dnd": {
      "text": "No Molestar"
    },
    "volume": {
      "label": ""
    },
    "backlight": {
      "label": ""
    },
    "mpris": {
      "image-size": 85,
      "image-radius": 10
    },
    "buttons-grid": {
      "actions": [
        {
          "label": "Wifi",
          "command": "nm-connection-editor",
          "type": "normal"
        },
        {
          "label": "Bluetooth",
          "command": "blueman-manager",
          "type": "normal"
        },
        {
          "label": "Audio",
          "command": "pavucontrol",
          "type": "normal"
        },
        {
            "label": "Reiniciar",
            "command": "systemctl reboot",
            "type": "normal"
        },
        {
            "label": "Apagar",
            "command": "systemctl poweroff",
            "type": "normal"
        }
      ]
    }
  }
}
